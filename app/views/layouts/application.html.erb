<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? content_for(:title) : 'Easy-Order' %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <div id="logo"><a href="/">Easy-Order</a></div>
  <div id="links">
    <ul>
      <li><%= link_to "Users", users_path %></li>
      <li><%= link_to "Restaurants", restaurants_path %></li>
      <li><%= link_to "Orders", orders_path %></li>
      <li><a href="/">Account</a></li>
      <li>
        <% if session[:user_id] %>
          <%= link_to "Sign Out", logout_path, method: :delete %>
        <% else %>
          <%= link_to "Sign In", login_path %>
        <% end %>
      </li>
    </ul>
  </div>
</nav>

<section class="<%= content_for?(:section_class) ? content_for(:section_class) : '' %>">
<%= yield %>
</section>
  
<footer>
  Created by Peter Story &copy; 2013. <br />
</footer>
  
</body>
</html>
