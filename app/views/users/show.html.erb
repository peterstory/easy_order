<% append_title('User Details') %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<p>
  <strong>Friends:</strong>
  <ul>
  <% @friends.each do |friend| %>
    <li>
      <%= friend.name %>
    </li>
  <% end %>
  </ul>
</p>

<% if (is_admin? || is_owner?) %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
