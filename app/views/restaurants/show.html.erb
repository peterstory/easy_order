<% append_title('Restaurant Details') %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>Cuisine:</strong>
  <%= @restaurant.cuisine %>
</p>

<div class="map">
  <strong>Map:</strong><br/>
  <%= image_tag map_url %>
</div>

<p>
  <strong>Street:</strong>
  <%= @restaurant.street1 %>
  <% if @restaurant.street2 && !@restaurant.street2.blank? %>
  <br />
  <%= @restaurant.street2 %>
  <% end %>
</p>

<p>
  <strong>City:</strong>
  <%= @restaurant.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @restaurant.state %>
</p>

<p>
  <strong>Zipcode:</strong>
  <%= @restaurant.zipcode %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone %>
</p>

<p>
  <strong>Fax:</strong>
  <%= @restaurant.fax %>
</p>

<p>
  <strong>Url:</strong>
  <%= @restaurant.url %>
</p>

<p>
  <strong>Delivers:</strong>
  <%= @restaurant.delivers %>
</p>

<p>
  <strong>Delivery charge:</strong>
  <%= @restaurant.delivery_charge %>
</p>

<p>
  <strong>Menu:</strong>
  <% if @restaurant.menu %>
    <% if /^image/.match @restaurant.menu.content_type %>
      <%= image_tag(restaurant_menu_path(@restaurant.id), class: "menu") %>
    <% else %>
      <%= link_to @restaurant.menu.name, restaurant_menu_path(@restaurant.id) %>
    <% end %>
  <% else %>
    Not available
  <% end %>
</p>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
